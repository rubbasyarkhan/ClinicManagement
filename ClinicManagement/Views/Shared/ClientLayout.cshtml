<!DOCTYPE html>
<html lang="en">

<head>
    <title>Pharma &mdash; Colorlib Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Rubik:400,700|Crimson+Text:400,400i" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/Client/assets/fonts/icomoon/style.css")">
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>


    <link rel="stylesheet" href="@Url.Content("~/Client/assets/css/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/assets/css/magnific-popup.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/assets/css/jquery-ui.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/assets/css/owl.carousel.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/assets/css/owl.theme.default.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/assets/css/aos.css")">
    <link rel="stylesheet" href="@Url.Content("~/Client/assets/css/style.css")">
</head>

<body>
    <div class="site-wrap">
        <div class="site-navbar py-2">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="site-logo">
                        <a href="@Url.Action("Index", "Home")" class="js-logo-clone">Pharma</a>
                    </div>
                    <nav class="site-navigation text-right text-md-center d-none d-lg-block">
                        <ul class="site-menu js-clone-nav d-none d-lg-block">
                            <li ><a href="@Url.Action("Index", "Client")">Home</a></li>
                            <li class="has-children">
                                <a href="@Url.Action("Products", "Client")">Products</a>
                                <ul class="dropdown">
                                    <li><a href="@Url.Action("Medicines", "Client")">Medicines</a></li>
                                    <li><a href="@Url.Action("MedicalEquipment", "Client")">Medical Equipment</a></li>
                                </ul>
                            </li>
                            <li><a href="@Url.Action("About", "Client")">About</a></li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="EducationEvents" asp-action="ClientEvents">Events</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="EventRegistrations" asp-action="MyRegistrations">My Registrations</a>
                            </li>


                          
                        </ul>
                    </nav>
                    <div class="icons d-flex align-items-center">
                        @{
                            var cartCount = ViewBag.CartCount ?? 0;
                        }
                        <a href="@Url.Action("Index", "Cart")" class="icons-btn d-inline-block bag">
                            <span class="icon-shopping-bag"></span>
                            <span class="number" id="cart-count" style="display:@(cartCount > 0 ? "inline-block" : "none")">@cartCount</span>
                        </a>

                        <div class="nav-item dropdown ml-3">
                            <a href="#" class="nav-link dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                                <span class="d-none d-lg-inline-flex">@User.Identity.Name</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0" aria-labelledby="">

                               <a asp-action="OrderHistory" asp-controller="Cart" class="btn">View Order History</a>


                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Auth")">Logout</a>
                                }
                                else
                                {
                                    <a class="dropdown-item" href="@Url.Action("Login", "Auth")">Login</a>
                                }
                            </div>
                        </div>

                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                        <script>
                            document.addEventListener("DOMContentLoaded", function () {
                                var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'))
                                var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
                                    return new bootstrap.Dropdown(dropdownToggleEl)
                                });
                            });
                        </script>



                        <a href="#" class="site-menu-toggle js-menu-toggle ml-3 d-inline-block d-lg-none">
                            <span class="icon-menu"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
        @RenderBody()
    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
                    <div class="block-7">
                        <h3 class="footer-heading mb-4">About Us</h3>
                        <p>WE ARE A GROUP OF FRIENDS WHO MAKE THIS.</p>
                    </div>
                </div>
                <div class="col-lg-3 mx-auto mb-5 mb-lg-0">
                    <h3 class="footer-heading mb-4">Quick Links</h3>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Medicines", "Client")">Medicines</a></li>
                        <li><a href="@Url.Action("MedicalEquipment", "Client")">Medical Equipment</a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-lg-3">
                    <h3 class="footer-heading mb-4">CONTACT US</h3>
                    <ul class="list-unstyled">
                        <li class="address">APTECH NORTH NAZIMABAD KARACHI PAKISTAN</li>
                        <li class="phone"><a href="tel://23923929210">0311-2887743</a></li>
                        <li class="email">rubbasyarkhan007@gmail.com</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="@Url.Content("~/Client/assets/js/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/Client/assets/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Client/assets/js/main.js")"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- AOS JS -->
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
