@model ClinicManagement.Models.EducationEvent

@{
    ViewData["Title"] = "Edit Education Event";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Edit Education Event</h1>
<h4>Event Details</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />

            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <input asp-for="EventName" class="form-control" required />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventDate" class="control-label"></label>
                <input asp-for="EventDate" type="date" class="form-control" required />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventTime" class="control-label"></label>
                <input asp-for="EventTime" type="time" class="form-control" required />
                <span asp-validation-for="EventTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Speaker" class="control-label"></label>
                <input asp-for="Speaker" class="form-control" required />
                <span asp-validation-for="Speaker" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Current Event Image</label><br />
                @if (!string.IsNullOrEmpty(Model.EventImage))
                {
                    <img src="~/image/events/@Model.EventImage" alt="Event Image" class="img-thumbnail" style="max-width: 200px;" />
                }
                else
                {
                    <p class="text-muted">No image available</p>
                }
            </div>

            <div class="form-group">
                <label>Upload New Image</label>
                <input type="file" name="EventImage" class="form-control" accept="image/*" />
            </div>


            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
