@model ClinicManagement.Models.EducationEvent

@{
    ViewData["Title"] = "Delete Education Event";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-danger mb-3">⚠ Delete Education Event</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this event?</strong> This action cannot be undone.
</div>

<div class="card shadow p-4">
    <h4 class="mb-3">📅 Event Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 fw-bold">📌 Event Name:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.EventName)</dd>

        <dt class="col-sm-3 fw-bold">📅 Event Date:</dt>
        <dd class="col-sm-9">@Model.EventDate.ToString("dd MMM yyyy")</dd>

        <dt class="col-sm-3 fw-bold">⏰ Event Time:</dt>
        <dd class="col-sm-9">@Model.EventTime</dd>

        <dt class="col-sm-3 fw-bold">🎤 Speaker:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Speaker)</dd>

        <dt class="col-sm-3 fw-bold">📝 Description:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-3 fw-bold">🖼 Event Image:</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.EventImage))
            {
                <img src="/image/events/@Model.EventImage"
                     alt="Event Image" class="img-thumbnail"
                     style="max-width: 200px; max-height: 200px; object-fit: cover;" />

            }
            else
            {
                <img src="~/images/default-event.png"
                     alt="No Image Available" class="img-thumbnail"
                     style="max-width: 200px; max-height: 200px; object-fit: cover;" />
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EventId" />

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
