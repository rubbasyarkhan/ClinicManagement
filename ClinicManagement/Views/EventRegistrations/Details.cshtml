@model ClinicManagement.Models.EventRegistration

@{
    ViewData["Title"] = "Registration Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Event Registration Details</h1>

<div>
    <h4>Registration Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Registration Date
        </dt>
        <dd class="col-sm-10">
            @Model.RegistrationDate?.ToString("dd MMM yyyy")

        </dd>

        <dt class="col-sm-2">
            Event Name
        </dt>
        <dd class="col-sm-10">
            @Model.Event?.EventName
        </dd>

        <dt class="col-sm-2">
            Registered User
        </dt>
        <dd class="col-sm-10">
            @Model.User?.FullName
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.RegistrationId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
