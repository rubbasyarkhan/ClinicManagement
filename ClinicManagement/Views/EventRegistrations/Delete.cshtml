@model ClinicManagement.Models.EventRegistration

@{
    ViewData["Title"] = "Delete Event Registration";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 class="text-danger">Delete Event Registration</h1>

<h3 class="text-warning">Are you sure you want to delete this registration?</h3>
<hr />

<div class="card shadow p-4">
    <h4>Event Registration Details</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.RegistrationDate)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.RegistrationDate)</dd>

        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Event)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Event.EventName)</dd>

        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.User)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.FullName)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RegistrationId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </form>
</div>
