@model IEnumerable<ClinicManagement.Models.Feedback>

@{
    ViewData["Title"] = "Feedback List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 class="text-primary">Feedback List</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Comment)</th>
                <th>@Html.DisplayNameFor(model => model.Rating)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <th>Product</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                    <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.Product.Name)</td> <!-- Changed from ProductId -->
                    <td>@Html.DisplayFor(modelItem => item.User.FullName)</td> <!-- Changed from UserId -->
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.FeedbackId" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.FeedbackId" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.FeedbackId" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
